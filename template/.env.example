# ====================================================================
# DDEX DSP Environment Configuration
# ====================================================================
# Copy this file to .env and fill in your values
# All client-side variables must be prefixed with VITE_
# ====================================================================

# --------------------------------------------------------------------
# Firebase Configuration (Required)
# --------------------------------------------------------------------
# Get these values from Firebase Console > Project Settings > General
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id

# Firebase Emulators (set to true for local development)
VITE_USE_FIREBASE_EMULATORS=false

# --------------------------------------------------------------------
# Search Service Configuration (Required for search functionality)
# --------------------------------------------------------------------
# Provider options: 'algolia', 'typesense', 'elasticsearch', 'meilisearch'
VITE_SEARCH_PROVIDER=algolia

# Algolia Configuration (if using Algolia)
VITE_ALGOLIA_APP_ID=your-algolia-app-id
VITE_ALGOLIA_SEARCH_KEY=your-search-only-api-key
VITE_ALGOLIA_INDEX_PREFIX=ddex_dsp

# Typesense Configuration (if using Typesense)
# VITE_TYPESENSE_HOST=your-typesense-host
# VITE_TYPESENSE_PORT=443
# VITE_TYPESENSE_PROTOCOL=https
# VITE_TYPESENSE_API_KEY=your-search-only-api-key

# --------------------------------------------------------------------
# CDN Configuration (Required for media delivery)
# --------------------------------------------------------------------
# Your CDN endpoints for serving static assets
VITE_CDN_BASE_URL=https://your-cdn.com
VITE_CDN_IMAGES_URL=https://images.your-cdn.com
VITE_CDN_AUDIO_URL=https://audio.your-cdn.com

# --------------------------------------------------------------------
# Streaming Configuration
# --------------------------------------------------------------------
# Quality options: 'auto', 'high', 'medium', 'low'
VITE_STREAM_QUALITY_DEFAULT=auto
VITE_STREAM_BUFFER_SIZE=65536
VITE_STREAM_PREFETCH_NEXT=true

# --------------------------------------------------------------------
# DDEX Ecosystem Integration
# --------------------------------------------------------------------
# URLs for DDEX ecosystem services
VITE_DDEX_WORKBENCH_URL=https://api.ddex-workbench.org
VITE_DDEX_DISTRO_URL=https://api.ddex-distro.org
VITE_DDEX_AUTH_URL=https://auth.ddex-ecosystem.org

# --------------------------------------------------------------------
# Platform Configuration
# --------------------------------------------------------------------
# Basic platform information
VITE_APP_NAME=Your DSP Name
VITE_APP_URL=https://your-dsp.com
VITE_APP_DESCRIPTION=Your streaming platform description
VITE_APP_VERSION=1.0.0

# --------------------------------------------------------------------
# Feature Flags
# --------------------------------------------------------------------
# Enable/disable platform features
VITE_FEATURE_OFFLINE_MODE=true
VITE_FEATURE_SOCIAL=true
VITE_FEATURE_DOWNLOADS=true
VITE_FEATURE_PODCASTS=false
VITE_FEATURE_LIVE_RADIO=false
VITE_FEATURE_DRM=false
VITE_FEATURE_PAYMENTS=true

# --------------------------------------------------------------------
# Analytics & Monitoring (Optional but recommended)
# --------------------------------------------------------------------
VITE_ANALYTICS_ENABLED=true
VITE_PERFORMANCE_MONITORING=true
VITE_ERROR_REPORTING=true

# Sentry error tracking (optional)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# --------------------------------------------------------------------
# Payment Processing (Required if VITE_FEATURE_PAYMENTS=true)
# --------------------------------------------------------------------
# Stripe configuration
VITE_STRIPE_PUBLIC_KEY=pk_test_or_live_key

# Comma-separated list of Stripe Price IDs for subscription tiers
# Format: free_tier,premium_monthly,premium_annual,family_plan
VITE_SUBSCRIPTION_PRICE_IDS=price_free,price_premium_monthly,price_premium_annual,price_family

# --------------------------------------------------------------------
# Geographic Configuration
# --------------------------------------------------------------------
# ISO country codes
VITE_DEFAULT_TERRITORY=US
# Comma-separated list of supported territories
VITE_SUPPORTED_TERRITORIES=US,CA,GB,EU,AU,JP

# --------------------------------------------------------------------
# Content Moderation
# --------------------------------------------------------------------
VITE_EXPLICIT_CONTENT_DEFAULT=true
VITE_AGE_VERIFICATION_REQUIRED=false

# --------------------------------------------------------------------
# Development/Testing Options
# --------------------------------------------------------------------
# Demo mode disables certain production features
VITE_DEMO_MODE=false
# Automatically seed database with sample data
VITE_SEED_DATA=false
# Enable detailed ingestion logging
VITE_DEBUG_INGESTION=false
# Log levels: 'debug', 'info', 'warn', 'error'
VITE_LOG_LEVEL=info

# ====================================================================
# Server-Side Environment Variables (not exposed to client)
# ====================================================================
# Add these to your Firebase Functions configuration or CI/CD secrets

# Firebase Admin SDK (for server-side operations)
# FIREBASE_ADMIN_SDK_PATH=./service-account-key.json

# Industry API Keys (for B2B integrations)
# DDEX_WORKBENCH_API_KEY=your-workbench-api-key
# DDEX_DISTRO_WEBHOOK_SECRET=your-webhook-secret

# Search Service Write Keys (server-side only)
# ALGOLIA_ADMIN_KEY=your-admin-api-key
# TYPESENSE_ADMIN_KEY=your-admin-api-key

# Payment Processing (server-side)
# STRIPE_SECRET_KEY=sk_test